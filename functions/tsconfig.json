{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "outDir": "lib",
    "sourceMap": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  "compileOnSave": true,
  "include": [
    "./src"
  ],
  // "extends": "../tsconfig.json"
}
